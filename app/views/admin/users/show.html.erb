<div class="container mx-auto p-6 bg-white shadow-md rounded-lg">
  <h1 class="text-3xl font-bold text-gray-800 mb-6">
    <%= @user.role.capitalize %> Details
  </h1>

  <div class="mb-4">
    <p class="text-lg"><strong>Username:</strong> <%= @user.username %></p>
    <p class="text-lg"><strong>Email:</strong> <%= @user.email %></p>
    <p class="text-lg"><strong>Role:</strong> <%= @user.role %></p>
    <p class="text-lg"><strong>Location:</strong> <%= @user.location %></p>
    <p class="text-lg">
      <strong>Status:</strong>
      <span class="<%= @user.approved? ? 'text-green-600' : 'text-red-600' %>">
        <%= @user.approved? ? 'Approved' : 'Pending' %>
      </span>
    </p>
  </div>

  <% if @user.role == 'adopter' && @user.adopter.present? %>
    <h2 class="text-2xl font-semibold text-gray-700 mt-8 mb-4">Additional Details</h2>
    <div class="mb-4">
      <p class="text-lg"><strong>First Name:</strong> <%= @user.adopter.first_name %></p>
      <p class="text-lg"><strong>Last Name:</strong> <%= @user.adopter.last_name %></p>
      <p class="text-lg"><strong>Preference:</strong> <%= @user.adopter.preference %></p>
      <%= link_to 'Edit Adopter Details', edit_admin_adopter_path(@user.adopter), class: 'inline-block bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600' %>
    </div>
  <% elsif @user.role == 'shelter' && @user.shelter.present? %>
    <h2 class="text-2xl font-semibold text-gray-700 mt-8 mb-4">Additional Details</h2>
    <div class="mb-4">
      <p class="text-lg"><strong>Name:</strong> <%= @user.shelter.name %></p>
      <p class="text-lg"><strong>Address:</strong> <%= @user.shelter.address %></p>
      <p class="text-lg"><strong>Phone Number:</strong> <%= @user.shelter.phone_number %></p>
      <p class="text-lg"><strong>Website:</strong> <%= @user.shelter.website %></p>
      <p class="text-lg"><strong>Description:</strong> <%= @user.shelter.description %></p>
      <%= link_to 'Edit Shelter Details', edit_admin_shelter_path(@user.shelter), class: 'inline-block bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600' %>
    </div>
  <% end %>

  <%= link_to 'Back', admin_users_path, class: 'inline-block bg-gray-500 text-white px-4 py-2 rounded hover:bg-gray-600 mt-4' %>
</div>
