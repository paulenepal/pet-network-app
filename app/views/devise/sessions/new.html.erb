<div class="flex flex-col justify-center items-center w-1/2 h-full">
  <h2 class="font-bold text-4xl">Sign In</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'w-full max-w-lg p-10' }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="field rounded-lg mb-6 w-full">
      <%= f.email_field :email,  
          autocomplete: "email", 
          placeholder: "Email",
          class: "shadow outline-none border-0 h-12 bg-gray-200 appearance-none rounded-lg w-full py-2 px-3 leading-tight focus:outline-none"
        %>
    </div>

    <div class="field rounded-lg mb-4 w-full">
      <%= f.password_field :password, 
          autocomplete: "current-password", 
          placeholder: "Password",
          class: "shadow outline-none border-0 h-12 bg-gray-200 appearance-none rounded-lg w-full py-2 px-3 leading-tight focus:outline-none focus:border-0"
      %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field mb-5 text-gray-600">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="text-gray-400 text-center mb-4">
      <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
    </div>
    
    <div class="actions flex justify-center items-center w-full h-10 cursor-pointer">
      <%= f.submit "SIGN IN", class: "cursor-pointer bg-green w-full h-full rounded-lg text-white hover:bg-green-2 transition-colors duration-300 ease-in-out" %>
    </div>
  <% end %>
</div>

<div class="flex flex-col justify-center items-center w-1/2 h-full bg-green-2 signin-b-radius text-white">
  <h1 class="text-5xl font-bold mb-8">Hello, Friend!</h1>
  <h3 class="text-md">Register with your personal details to</h3>
  <h3 class="text-md mb-6">join our platform.</h3>

  <div class="text-white text-center px-10 py-2 rounded-xl border-2 hover:bg-vanilla hover:text-green hover:border-vanilla transition-colors duration-300 ease-in-out">
    <%= link_to "SIGN UP", new_registration_path(resource_name) %><br />
  </div>
</div>
