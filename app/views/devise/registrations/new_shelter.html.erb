<h1>Create Shelter Account</h1>

<%= form_with model: @user, url: create_shelter_path, method: :post do |f| %>
  <%= f.hidden_field :invitation_token, value: @user.invitation_token %>
  <%= f.hidden_field :role, value: 'shelter' %>

  <div>
    <%= f.label :email %>
    <%= f.email_field :email, value: @user.email, readonly: true %>
  </div>
  <div>
    <%= f.label :password %>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>
  <div>
    <%= f.label :username %>
    <%= f.text_field :username %>
  </div>
  <div>
    <%= f.label :location %>
    <%= f.text_field :location %>
  </div>

  <h3>Shelter Information</h3>
  <div>
    <%= f.fields_for :shelter do |shelter_fields| %>
      <div>
        <%= shelter_fields.label :name %>
        <%= shelter_fields.text_field :name %>
      </div>
      <div>
        <%= shelter_fields.label :address %>
        <%= shelter_fields.text_field :address %>
      </div>
      <div>
        <%= shelter_fields.label :phone_number %>
        <%= shelter_fields.text_field :phone_number %>
      </div>
      <div>
        <%= shelter_fields.label :website %>
        <%= shelter_fields.text_field :website %>
      </div>
      <div>
        <%= shelter_fields.label :description %>
        <%= shelter_fields.text_area :description %>
      </div>
    <% end %>
  </div>

  <div class="actions">
    <%= f.submit 'Create Shelter' %>
  </div>
<% end %>
