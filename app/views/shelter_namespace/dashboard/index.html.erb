<div class="relative bg-white">
  <h1 class="font-bold text-4xl mb-4 bg-green text-white px-6 py-8 text-center header-radius">Dashboard</h1>
  <%= image_tag('cute_cat.png', class: "absolute -bottom-20 left-2 w-16 md:w-60 z-10") %>
  <%= image_tag('cute_dog.png', class: "absolute bottom-0 right-2 w-16 md:w-64 z-10") %>
</div>

<div class="flex flex-col items-center">
  <div class="bg-white shadow-lg rounded-lg p-8 w-full max-w-4xl mx-auto mb-6">
    <h2 class="text-2xl font-semibold text-green-600 mb-4 text-center">
      <%= current_user.shelter.name %>, here's how we look so far:
    </h2>
    <div class="flex flex-col lg:flex-row gap-6">
      <div class="w-full lg:w-2/3">
        <div class="grid grid-cols-1 gap-4">
          <%= link_to shelter_namespace_pets_path, class: 'bg-orange-500 text-white p-6 rounded-lg text-center text-2xl font-bold flex items-center' do %>
            <%= image_tag 'dog.png', class: 'w-14 mr-4' %>
            Total Pets: <%= @total_pets %>
          <% end %>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <%= link_to shelter_namespace_pets_path, class: 'bg-teal-500 text-white p-6 rounded-lg text-center text-xl font-bold flex items-center' do %>
            <%= image_tag 'dp_cat.png', class: 'w-14 mr-2.5' %>
              Adopted: <%= @adopted_pets %>
            <% end %>
            <%= link_to shelter_namespace_adoption_applications_path, class: 'bg-orange-500 text-white p-6 rounded-lg text-center text-xl font-bold flex items-center' do %>
            <%= image_tag 'paw.png', class: 'w-14 mr-2.5' %>
              Pending Adoption: <%= @pending_pets %>
            <% end %>
            <%= link_to shelter_namespace_pets_path, class: 'bg-lime-500 text-white p-8 rounded-lg text-center text-xl font-bold flex items-center' do %>
            <%= image_tag 'dp_dog.png', class: 'w-12 mr-2.5' %>
              Available: <%= @available_pets %>
            <% end %>
          </div>
        </div>
      </div>
      <div class="w-full lg:w-1/3 bg-white shadow-lg rounded-lg p-6">
        <h3 class="text-xl font-semibold text-green-600 mb-4"><%= current_user.shelter.name %>'s Mission and Vision</h3>
        <p class="text-gray-700 mb-4">Our mission is to rescue, rehabilitate, and rehome pets in need. We envision that in <%= current_user.shelter.address %>, every pet has a loving and permanent home.</p>
        <p class="text-gray-700">We are committed to providing the best care and support for our pets and adopters. Thank you for being part of our community.</p>
      </div>
    </div>
  </div>

  <div class="flex justify-center space-x-4">
    <%= link_to 'View All Pets', shelter_namespace_pets_path, class: 'bg-teal-500 hover:bg-teal-700 text-white font-bold py-2 px-4 rounded shadow' %>
    <%= link_to 'Add New Pet', new_shelter_namespace_pet_path, class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded shadow' %>
  </div>
</div>
