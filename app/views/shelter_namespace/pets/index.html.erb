<div class="relative bg-white">
  <h1 class="font-bold text-4xl mb-4 bg-green text-white px-6 py-8 text-center header-radius">Pets</h1>
  <%= image_tag('cute_cat.png', class: "absolute -bottom-20 left-2 w-16 md:w-60 z-10") %>
  <%= image_tag('cute_dog.png', class: "absolute bottom-0 right-2 w-16 md:w-64 z-10") %>
</div>

<% if @pets.any? %>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 p-6">
    <% @pets.each do |pet| %>
      <div class="bg-white rounded-lg shadow-md p-6">
        <% if pet.photos.attached? %>
          <div class="overflow-hidden rounded-t-lg">
            <%= image_tag url_for(pet.photos.first), class: "w-full h-48 object-cover" %>
          </div>
          <% else %>
            <div class="overflow-hidden rounded-t-lg flex items-center justify-center bg-gray-200 h-48">
              <span class="text-gray-500">No image available</span>
            </div>
        <% end %>
        <div class="mt-4">
          <h2 class="text-xl font-bold mb-2"><%= link_to pet.name, shelter_namespace_pet_path(pet), class: 'text-blue-500 hover:text-blue-700' %></h2>
          <p class="text-gray-700"><strong>Species:</strong> <%= pet.species %></p>
          <p class="text-gray-700"><strong>Breed:</strong> <%= pet.breed %></p>
          <p class="text-gray-700"><strong>Age:</strong> <%= pet.age %></p>
          <p class="text-gray-700"><strong>Size:</strong> <%= pet.size %></p>
          <p class="text-gray-700"><strong>Gender:</strong> <%= pet.gender %></p>
          <p class="text-gray-700"><strong>Adoption Status:</strong> <%= pet.adoption_status %></p>
          <div class="mt-4 flex justify-between">
            <%= link_to edit_shelter_namespace_pet_path(pet), class: 'text-yellow-500 hover:text-yellow-700 flex items-center' do %>
              <i class="fa-solid fa-pencil-alt mr-2"></i> Edit
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <p class="text-red-500 text-center">No pets found.</p>
<% end %>

<div class="flex justify-center">
  <%= link_to 'New Pet', new_shelter_namespace_pet_path, class: 'mt-4 bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded' %>
</div>
