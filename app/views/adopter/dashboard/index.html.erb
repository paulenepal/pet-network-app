<div class="h-full w-full bg-slate-100 rounded-3xl ">
  <div class="flex flex-col w-full h-full justify-center items-center">
    <div class="mb-10 text-center">
      <h2 class="font-bold text-6xl mb-2">Find your new best friend</h2>
      <p class="text-2xl">Browse pets from our network of shelters and rescues.</p>
    </div>

    <div class="flex justify-center items-center space-x-6 w-1/3 h-1/5">
      <%= link_to adopter_pets_path(location: '', distance: 15, unit: 'mi', species: 'Dog', commit: 'Search'), class: 'w-1/2 h-full' do %>
        <div class="flex flex-col justify-center items-center transition duration-300 ease-in-out h-full bg-white rounded-full shadow-md hover:bg-slate-50 hover:scale-105">
          <%= image_tag 'out-d.png', class: 'w-24 mb-3' %>
          <span>Dogs</span>
        </div>
      <% end %>
      
      <%= link_to adopter_pets_path(location: '', distance: 15, unit: 'mi', species: 'Cat', commit: 'Search'), class: 'w-1/2 h-full' do %>
        <div class="flex flex-col justify-center items-center transition duration-300 ease-in-out h-full bg-white rounded-full shadow-md hover:bg-slate-50 hover:scale-105">
          <%= image_tag 'out-c.png', class: 'w-24 mb-3' %>
          <span>Cats</span>
        </div>
      <% end %>
    </div>

  <div>

</div>
