<div class="w-full flex justify-end items-center pl-5">
  <div class="w-3/4 bg-white p-6 rounded-3xl shadow-lg">
    <div>
      <%= form_with(model: [@pet, @pet_comment], url: adopter_pet_comments_path(@pet), id: "new_comment", local: true) do |form| %>
        <div class="flex items-center w-full">
          <%= form.text_area :comment_text, placeholder: "Add a comment", class: "w-full flex-1 rounded-3xl p-4 mr-2 h-16" %>
          <button type="submit" class="flex items-center justify-center bg-blue-500 text-white rounded-3xl p-5 hover:bg-blue-700">
            <i class="fa-solid fa-arrow-right-to-bracket text-xl"></i>
          </button>
        </div>
      <% end %>
    </div>

    <div class="mt-6">
      <% @pet.pet_comments.each do |pet_comment| %>
        <%= render partial: "adopter/comments/comment", locals: { pet_comment: pet_comment } %>
      <% end %>
    </div>
  </div>
</div>
